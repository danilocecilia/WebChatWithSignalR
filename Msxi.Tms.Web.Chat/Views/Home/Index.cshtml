@model Msxi.Tms.Web.Chat.Controllers.HomeController.User

<link href="~/Content/chat.css" rel="stylesheet" />

<input type="hidden" id="displayname" />
<input type="hidden" id="hddUnreadMsg" value="0" />
<input type="hidden" id="hddNomeUser" value="@Model.Name" />

@{
    if (@Model.Profile == "Admin")
    { 
        <input type="hidden" id="hddAtendente" value="@Model.Name" />
    }
    else
    { 
        <input type="hidden" id="hddAtendente" value="" />
    }
}
<div class="container">
    <div class="row chat-window col-xs-5 col-md-3" id="chat_window_1" style="margin-left:10px;">
        <div class="col-xs-12 col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading top-bar">
                    <div class="col-md-8 col-xs-8">
                        <h3 id="chatTitle" class="panel-title"><span class="glyphicon glyphicon-comment"></span><span id="headerName"> Chat - @Model.Name</span></h3>
                    </div>
                    <div class="col-md-4 col-xs-4" style="text-align: right;">
                        <a href="#"><span id="minim_chat_window" class="glyphicon glyphicon-minus icon_minim"></span></a>
                        <a href="#"><span class="glyphicon glyphicon-remove icon_close" data-id="chat_window_1"></span></a>
                    </div>
                </div>
                <div id="divContainerMsg" class="panel-body msg_container_base">@*Dinamyc Content Goes HERE!*@</div>
                <div class="panel-footer">
                    <div class="input-group">
                        <input id="btn-input" type="text" class="form-control input-sm chat_input" placeholder="Escreva sua mensagem Aqui..." />
                        <span class="input-group-btn">
                            <button class="btn btn-primary btn-sm" id="btn-chat">Enviar</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
}